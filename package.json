{
	"name": "products-api",
	"version": "0.0.1",
	"description": "",
	"author": {
		"name": "Diogo Lara",
		"url": "https://github.com/diogodev/products-api"
	},
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start --watch",
		"start:dev": "npm run database:init && npm run models:generate && nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"stop": "npm run compose:down",
		"lint:prettier:check": "prettier --check .",
		"lint:prettier:fix": "prettier --write .",
		"lint:eslint:check": "next lint --dir .",
		"lint:all": "npm run lint:prettier:check && npm run lint:prettier:fix && npm run lint:eslint:check",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"compose:up": "docker compose -f ./compose.yml up -d --wait",
		"compose:down": "docker compose -f ./compose.yml down",
		"database:init": "npm run compose:up && npm run database:migrate && npm run database:seed",
		"database:migrate": "npx prisma migrate dev",
		"database:seed": "ts-node ./prisma/seed.ts",
		"models:generate": "npx prisma generate"
	},
	"dependencies": {
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"@prisma/client": "^5.20.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv-expand": "^11.0.6",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.3.1",
		"@types/supertest": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"jest": "^29.5.0",
		"prettier": "^3.3.3",
		"prisma": "^5.20.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	}
}
